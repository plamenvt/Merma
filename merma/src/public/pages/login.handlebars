<h2 class="title">Profile</h2>
<form class="form-group" method="POST" action="api/login" id="container-sign-in"> 
    <h3>Log in</h3>
    <div class="col-4 offset-4"> 
        <input type="text" name="username" class="form-control" placeholder="user" id="tb-username">
    </div>
    <div class="col-4 offset-4">
        <input type="password" name="password" class="form-control" placeholder="password" id="tb-password">
    </div>    
    <div>
        <input type="submit" class="btn btn-secondary col-2 offset-5" value="Log in" id="#btn-sign-in">
    </div>    
</form>