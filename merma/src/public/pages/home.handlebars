<h2 class="title">Shrinkage Evaluetion</h2>
{{#if user}}
<h2 class="title">User</h2>
{{/if}}
<form class="form-group" method="POST" action="api/responses">
    <div class="form-group" id="user-info">
        <h3>Please, fill your ID and name:</h3>
        <div class="col-4 offset-4"> 
            <input type="text" name="id" class="form-control" placeholder="ID">
        </div>
        <div class="col-6 offset-3">
            <input type="text" name="name" class="form-control" placeholder="First and last name">
        </div>
        <div>
            <span class="btn btn-secondary col-2 offset-5" id="next-section">Next</span>
        </div>      
    </div>
    <div class="form-group" id="questions">
        {{#each this}}
        <div>
        <label for="{{title}}" class="col-10 offset-1">{{title}}</label>
        </div>
        <div>
        <select class="form-control col-10 offset-1" name="answers">
            <option selected>Choose...</option>
            {{#each answer}}
            <option>{{this}}</option>
            {{/each}}
        </select>
        <select name="correct_answers" class="hidden">
            <option selected>{{correct_answer}}</option>
        </select>    
        </div>
        {{/each}} 
        <div class="offset-1">
            <button type="submit" class="btn btn-secondary" id="submit-form">Submit</button>
        </div>
    </div>
</form>