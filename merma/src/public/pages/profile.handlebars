<form class="form-group pl-1 pb-4 pt-4" id="addPostForm">
    <div class="form-group" id="user-info">
        <h2 class="panel-heading">New post:</h2>
        <div class="col-10 pb-2 pt-2">
            <input type="text" name="id" class="form-control" id="tb-id" placeholder="Id">
        </div>
        <div class="col-10 pb-2 pt-2">
            <input type="text" name="categor" class="form-control" id="tb-categor" placeholder="Category">
        </div>
        <div class="col-10 pb-2 pt-2"> 
            <input type="text" name="title" class="form-control" id="tb-tatle" placeholder="Title">
        </div>
        <div class="col-10 pb-2 pt-2">
            <input type="text" name="author" class="form-control" id="tb-author" placeholder="Author">
        </div>
        <div class="col-10 pb-2 pt-2">
            <input type="text" name="post" class="form-control" id="tb-post" placeholder="Post text">
        </div>
        <div class="pb-2 pt-2">
            <button onClick="insertPost()" class="btn btn-secondary" id="submit-form">Submit</button>
        </div>   
    </div>
</form>